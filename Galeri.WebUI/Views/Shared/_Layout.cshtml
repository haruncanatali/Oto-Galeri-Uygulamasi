<!DOCTYPE html>
<html>
<head>
    <style>
        .menuYazilari{
            color:black;
            font-weight : bolder;
        }
        .menuYazilari:hover{
            color:red;
        }
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Dilaver Otomotiv</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-fixed-top" style="background-color: #fff200;">
        <div class="container">       
            <a class="navbar-brand" href="/Home/Index" style="margin-left:-30px;"><span class="menuYazilari">Dilaver Otomotiv</span></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav" style="margin-left:600px;">
                    <li class="nav-item" style="margin-left:-485px; margin-top:10px;">
                        <form class="d-flex" action="/Home/Filtrele" method="get">
                            <input id="textX" name="textX" class="form-control me-2" type="search" placeholder="Örn. Mercedes C-200" aria-label="Search">
                            <button class="btn btn-outline-success" type="submit"><span class="menuYazilari">Ara</span></button>
                        </form>
                    </li>
                    <li class="nav-item" style="margin-left:400px;">
                        <a class="nav-link active" aria-current="page" href="/Home/Index" style="text-decoration:none;"><span class="menuYazilari">Anasayfa</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Hakkimizda/Index" style="text-decoration:none;"><span class="menuYazilari">Hakkımızda</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Iletisim/Index" style="text-decoration:none;"><span class="menuYazilari">İletişim</span></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        <div class="row">
            @RenderBody()
        </div>            
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
